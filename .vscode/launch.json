{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach do Node.js Debugger",
            "request": "attach",
            "type": "node",
            "port": 9229,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/**/node_modules/**/*.js"
            ],
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}